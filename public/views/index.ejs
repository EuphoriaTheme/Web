function isInViewport(el) {
    const rect = el.getBoundingClientRect();
    return (
        rect.top < window.innerHeight &&
        rect.bottom > 0
    );
}

function checkCardsInView() {
    cards.forEach(card => {
        if (isInViewport(card)) {
            card.classList.add('scrolled');
        } else {
            card.classList.remove('scrolled');
        }
    });
}

// Debounce to avoid firing too frequently
function debounce(func, wait = 10, immediate = true) {
    let timeout;
    return function () {
        const context = this,
            args = arguments;
        const later = function () {
            timeout = null;
            if (!immediate) func.apply(context, args);
        };
        const callNow = immediate && !timeout;
        clearTimeout(timeout);
        timeout = setTimeout(later, wait);
        if (callNow) func.apply(context, args);
    };
}

window.addEventListener('scroll', debounce(checkCardsInView));
checkCardsInView(); // Initial check when the page loads
